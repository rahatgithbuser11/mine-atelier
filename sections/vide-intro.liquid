{% comment %}
  Video Intro Section
  This section allows merchants to display a fullscreen or boxed intro video.
{% endcomment %}

<section class="video-intro-section" style="position: relative; overflow: hidden;">
    {% if section.settings.video_url != blank %}
      <video 
        autoplay 
        muted 
        loop 
        playsinline 
        class="video-intro"
        style="width: 100%; height: auto; display: block;"
      >
        <source src="{{ section.settings.video_url | escape }}" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    {% endif %}
  
    {% if section.settings.overlay_text != blank %}
      <div class="video-overlay-text" 
        style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);
               color: {{ section.settings.text_color }};
               text-align: center; font-size: 2rem; font-weight: bold;">
        {{ section.settings.overlay_text }}
      </div>
    {% endif %}
  </section>
  
  {% schema %}
  {
    "name": "Video Intro",
    "settings": [
      {
        "type": "url",
        "id": "video_url",
        "label": "Video URL",
        "info": "Upload a .mp4 file in Shopify settings â†’ Files and paste the URL here."
      },
      {
        "type": "text",
        "id": "overlay_text",
        "label": "Overlay Text",
        "default": "Welcome to Our Store"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text Color",
        "default": "#ffffff"
      }
    ],
    "presets": [
      {
        "name": "Video Intro",
        "category": "Media"
      }
    ]
  }
  {% endschema %}
  